<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/nameTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:gravity="fill_vertical"
        android:minHeight="40dp"
        android:text=" name"
        app:layout_constraintBottom_toTopOf="@+id/ageTextId"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ageTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" age"
        android:layout_marginStart="5dp"
        android:gravity="fill_vertical"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTextId"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/addressTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" address"
        android:gravity="fill_vertical"
        android:minHeight="40dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextId"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>